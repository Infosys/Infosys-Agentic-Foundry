# Update the secrets master key with the output you get by executing generate_master_secret_key.py
SECRETS_MASTER_KEY=""

# Set is as False to disable logging.
ENABLE_LOGGING=True

# Set it as True for OpenTelemetry Collector and tracing. (False in local system)
USE_OTEL_LOGGING=False

# GIVE YOUR POSTGRESQL CONFIG

DATABASE_URL=postgresql://postgres:<PASSWORD>@localhost:5432/postgres

POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_USER=postgres
POSTGRESQL_PASSWORD=postgres
DATABASE=agentic_workflow_as_service_database
FEEDBACK_LEARNING_DB_NAME=feedback_learning
EVALUATION_LOGS_DB_NAME=evaluation_logs
RECYCLE_DB_NAME=recycle
LOGIN_DB_NAME=login
ARIZE_TRACES_DB_NAME=arize_traces
# keep it 'low' for local devices, change it to 'medium' or 'high' for Server/VM
CONNECTION_POOL_SIZE="low"
POSTGRESQL_DB_URL_PREFIX="postgresql://postgres:<PASSWORD>@localhost:5432/"
POSTGRESQL_DATABASE_URL="postgresql://postgres:<PASSWORD>@localhost:5432/agentic_workflow_as_service_database?sslmode=disable"

PHOENIX_SQL_DATABASE_URL="postgresql://postgres:<PASSWORD>@localhost:5432/arize_traces"
PHOENIX_COLLECTOR_ENDPOINT="http://localhost:6006"
PHOENIX_GRPC_PORT="50051"

# The 'server_name' parameter should contain the name of the server or VM where the backend is hosted.
# This helps ensure that logs from different servers can be clearly understood and distinguished.
SERVER_NAME="localhost"

# Redis caching flag
# Before setting this as True make sure that the Redis is setup and the connection config details are done below, or else leave it as False.
ENABLE_CACHING=False      

# Redis connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# Setup you redis password here
REDIS_PASSWORD=1234
CACHE_EXPIRY_TIME=900


NO_PROXY_HOSTS=localhost,127.0.0.1
ADDITIONAL_NO_PROXYS=""

# Speech-to-text
STT_ENDPOINT=""
SPEECH_KEY=""
SERVICE_REGION=""


# ---- Authentication / JWT ----
# Strong random secret (32+ chars). Change in production; rotating requires re-issuing existing tokens.
AUTH_JWT_SECRET=""
# Algorithm for JWT signing (e.g., HS256, HS512)
AUTH_JWT_ALGORITHM=HS256
# Access token lifetime in seconds (default 900 = 15 minutes)
AUTH_ACCESS_TOKEN_EXPIRE_SECONDS=900
# Refresh token lifetime in days (default 14)
AUTH_REFRESH_TOKEN_EXPIRE_DAYS=14
# Enable or disable refresh token flow ("true" / "false")
AUTH_ENABLE_REFRESH_TOKENS=true


MODEL_SERVER_URL="http://00.000.000.000:0000"
MODEL_SERVER_HOST=00.000.000.000
MODEL_SERVER_PORT=5500

OTEL_EXPORTER_OTLP_TRACES_ENDPOINT="http://localhost:4318/v1/traces"
USE_HTTP=True
OTEL_EXPORTER_OTLP_LOGS_ENDPOINT_HTTP="http://localhost:4320/v1/logs"
OTEL_EXPORTER_OTLP_LOGS_ENDPOINT_GRPC="localhost:4319"

# Application Environment Mode
# Set to 'development' for development features (Swagger UI enabled)
# Set to 'production' for production deployment (Swagger UI disabled for security)
ENVIRONMENT=development

# Number of days to retain deleted short-term checkpoints and long-term chats in the recycle bin before permanent deletion
RECYCLE_BIN_RETENTION_DAYS=15

